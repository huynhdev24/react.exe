{
    "compilerOptions": {
        "noEmit": true,
        "baseUrl": "./src",
        "outDir": "./dist",
        "allowJs": false,
        "declaration": true,
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": ["jest"],
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ESNext","DOM"],
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["src","node_modules/@types"]
}